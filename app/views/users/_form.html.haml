= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  =f.label :email
  =f.text_field :email
  %br
  =f.label :first_name
  =f.text_field :first_name
  %br
  =f.label :last_name
  =f.text_field :last_name
  %br
  =f.label :city
  =f.text_field :city
  %br
  =f.label :state
  =f.text_field :state
  %br
  =f.label :about
  =f.text_field :about
  %br
  =f.label :country
  =f.text_field :country


  .actions
    = f.submit 'Save'

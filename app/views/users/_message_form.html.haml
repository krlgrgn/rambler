= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  =f.label :body
  =f.text_field :body

  = hidden_field_tag :recipient, @user.to_param

  .actions
    = f.submit "Send"

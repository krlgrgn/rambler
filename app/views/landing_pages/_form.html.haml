= form_for @landing_page, html: { class: "form-inline" } do |f|
  - if @landing_page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@landing_page.errors.count, "error")} prohibited this landing_page from being saved:"
      %ul
        - @landing_page.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :email, placeholder: "example@gmail.com", id: "landing-page-email-field"
  = f.submit "I'm interested!", class: "btn btn-large palette-carrot"

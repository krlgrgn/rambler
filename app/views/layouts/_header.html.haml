.navbar-inner
  .container
    %nav
      %ul{ :class => "nav pull-right" }
        %li
          = link_to "Home",    root_path
        %li
          = link_to "Help",    '#'
        - if signed_in?
          %li
            = link_to "Sign out", signout_path, method: "delete"
          %li
            = link_to "Messages", user_mailbox_path(current_user)
        - else
          %li
            = link_to "Sign up", signup_path
          %li
            = link_to "Sign in", signin_path
          %li
            = link_to "Sigin in with Facebook", url_for("auth/facebook")

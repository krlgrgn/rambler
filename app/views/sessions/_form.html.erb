<%= form_for :session, url: sessions_path, :html => {:class => "form-horizontal"} do |f| %>
  <div class="form-group">
    <div class="col-lg-10">
      <%= f.text_field :email, class: "form-control", placeholder: "Email"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10">
      <%= f.text_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10">
      <%= f.submit 'Sign in', class: "btn btn-info" %>
    </div>
  </div>

<% end %>

<p><%= link_to "Forgot Password", new_password_reset_path %></p>
